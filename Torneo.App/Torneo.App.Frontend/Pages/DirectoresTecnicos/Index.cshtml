@page
@model Torneo.App.Frontend.Pages.DirectoresTecnicos.IndexModel
@{
}
<h1>LISTADO DIRECTORES TECNICOS</h1>
<table class="table table-success table-striped">
    <thead>
        <tr>
            <th scope="Id">Id</th>
            <th scope="Nombre">Nombre</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dt in Model.dt)
        {
            <tr>
                <th>@dt.Id</th>
                <td>@dt.Nombre</td>
                <td>
                    <a class="btn btn-primary" asp-page="./Details" asp-route-id="@dt.Id">
                        Detalle
                    </a>
                    <a class="btn btn-secondary" asp-page="./Edit" asp-route-id="@dt.Id">
                        Editar
                    </a>
                    @if (dt.Equipos.Count == 0)
                    {
                        <form method="post" class="d-inline">
                            <button asp-page-handler="Delete" asp-route-id="@dt.Id"
                            onclick="return confirm('Esta Seguro de eliminar el director tecnico?')" class="btn btn-danger">
                                Delete

                            </button>
                        </form>
                    } 
                </td>
            </tr>
        }
    </tbody>
</table>