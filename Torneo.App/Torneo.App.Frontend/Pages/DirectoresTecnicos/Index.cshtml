@page
@model Torneo.App.Frontend.Pages.DirectoresTecnicos.IndexModel
@{
}
<h1>LISTADO DIRECTORES TECNICOS</h1>
<table class="table table-success table-striped">
    <thead>
        <tr>
            <th scope="Id">Id</th>
            <th scope="Nombre">Nombre</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dt in Model.dts)
        {
            <tr>
                <th>@dt.Id</th>
                <td>@dt.Nombre</td>
                <td>
                    <a class="btn btn-outline-dark" asp-page="./Details" asp-route-id="@dt.Id">
                        Detalle
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>