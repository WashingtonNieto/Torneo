@page
@model Torneo.App.Frontend.Pages.Partidos.IndexModel
@{
}
<h1>Listado de Partidos</h1>
<table class="table table-success table-striped">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Id</th>
      <th scope="col">FechaHora</th>
      <th scope="col">Local</th>
      <th scope="col">MarcadorLocal</th>
      <th scope="col">Visitante</th>
      <th scope="col">MarcadorVisitante</th>
      <th scope="col">Acciones</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var partido in Model.partidos)
    {
      <tr>
        <th>@partido.Id</th>
        <td>@partido.FechaHora</td>
        <th>@partido.Local.Nombre</th>
        <td>@partido.MarcadorLocal</td>
        <th>@partido.Visitante.Nombre</th>
        <td>@partido.MarcadorVisitante</td>
        <td>
          <a class="btn btn-primary" asp-page="./Details" asp-route-id="@partido.Id">
            Detalle
          </a>
        </td>
      </tr>
    }
  </tbody>
</table>